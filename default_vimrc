function! EscapeKey()
    " Do mappings for funny keyboard
    :inoremap ` <esc>
    :inoremap C-<esc> `
    :cnoremap ` <esc>
    :cnoremap C-<esc> `
endfunction

function! FJEscape()
    " Do mappings for funny keyboard
    :inoremap fj <esc>
    :cnoremap fj <esc>
    :noremap ;; :
endfunction
" :iunmap fj
" :cunmap fj
call FJEscape()


function! FixEscapeKey()
    :call EscapeKey()
endfunction

