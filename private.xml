<?xml version="1.0"?>
<root>
      <item> 
        <name>Fix A-T C-T differences</name>
        <appendix>See the private.xml</appendix>
        <identifier>private.fixing-alt-tab</identifier>
        <not>REMOTEDESKTOPCONNECTION</not>
        <!-- Make A-TAB switch apps (NOTE: Using Option-R to break loop with the next command) --> 
        <autogen>__KeyToKey__
          KeyCode::TAB,          ModifierFlag::OPTION_L,
          KeyCode::TAB,          ModifierFlag::COMMAND_R</autogen>
        <!-- Make C-TAB switch tabs--> 
        <autogen>__KeyToKey__
          KeyCode::TAB,          ModifierFlag::COMMAND_L,
          KeyCode::TAB,          ModifierFlag::CONTROL_L</autogen>
      </item> 
      <item>

        <name>My Terminal  Hacks (effective only on Terminal)</name>
        <appendix>See the private.xml</appendix>
        <identifier>private.termial_goop</identifier>
        <only>TERMINAL</only>
        <!-- Do D-* -> C-*  -->
        <autogen>__KeyToKey__ KeyCode::COMMAND_L, KeyCode::CONTROL_L</autogen>
        <!-- Except the following TAB, + - -->

        <!-- Switch apps  --> 
        <autogen>__KeyToKey__
          KeyCode::TAB,          ModifierFlag::CONTROL_L,
          KeyCode::TAB,          ModifierFlag::COMMAND_L</autogen>
        <!-- Font Size Up  --> 
        <autogen>__KeyToKey__
          KeyCode::EQUAL,    ModifierFlag::CONTROL_L,
          KeyCode::EQUAL,    ModifierFlag::COMMAND_L</autogen>

        <!-- Font Size Down  --> 
        <autogen>__KeyToKey__
          KeyCode::MINUS,    ModifierFlag::CONTROL_L,
          KeyCode::MINUS,    ModifierFlag::COMMAND_L</autogen>

        <!-- Paste (C-V) --> 
        <autogen>__KeyToKey__
          KeyCode::V,    ModifierFlag::CONTROL_L,
          KeyCode::V,    ModifierFlag::COMMAND_L</autogen>


        <!-- Make C-1-4  map to D-T which swaps terminal tabs --> 
        <autogen>__KeyToKey__
          KeyCode::KEY_1,    ModifierFlag::CONTROL_L,
          KeyCode::KEY_1,    ModifierFlag::COMMAND_L</autogen>
        <autogen>__KeyToKey__
          KeyCode::KEY_2,    ModifierFlag::CONTROL_L,
          KeyCode::KEY_2,    ModifierFlag::COMMAND_L</autogen>
        <autogen>__KeyToKey__
          KeyCode::KEY_3,    ModifierFlag::CONTROL_L,
          KeyCode::KEY_3,    ModifierFlag::COMMAND_L</autogen>
        <autogen>__KeyToKey__
          KeyCode::KEY_4,    ModifierFlag::CONTROL_L,
          KeyCode::KEY_4,    ModifierFlag::COMMAND_L</autogen>
        <autogen>__KeyToKey__
          KeyCode::KEY_5,    ModifierFlag::CONTROL_L,
          KeyCode::KEY_5,    ModifierFlag::COMMAND_L</autogen>
        <autogen>__KeyToKey__
          KeyCode::KEY_6,    ModifierFlag::CONTROL_L,
          KeyCode::KEY_6,    ModifierFlag::COMMAND_L</autogen>

        <!-- Make A-T map to D-T which is the command to create a new TAB --> 
        <autogen>__KeyToKey__
          KeyCode::T,    ModifierFlag::OPTION_L,
          KeyCode::T,    ModifierFlag::COMMAND_L</autogen>



      </item>
</root>
